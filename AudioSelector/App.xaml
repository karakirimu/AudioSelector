<Application x:Class="AudioSelector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Properties/Light.xaml"/>
                <ResourceDictionary Source="Properties/Dark.xaml"/>
                <ResourceDictionary Source="Properties/Resources.xaml"/>
                <ResourceDictionary Source="Properties/Resources.ja-JP.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
